#include "libft.h"
#include <stdlib.h>

char **ft_strsplit(char const *s, char c)
{
	int i;
	int g;
	int n;
	int h;
	char **p;

	i = 0;
	g = ft_qlines(s, c);
	n = 0;
	h = 0;
	if (!(p = (char **)malloc(g * sizeof(char *) + 1)))
		return (0);
	while(s[i] != '\0')
	{
		while(s[i] == c) 
			i++;
		while(s[i] != c && s[i] != '\0')
		{
			h++;
			i++;
		}
		if(h > 0)
			p[n] = (char *)malloc((h + 1) * sizeof(char));
		h = 0;
		n++;
	}
	p[n] = 0;
	return(p = ft_flines(p, s, c));
}
